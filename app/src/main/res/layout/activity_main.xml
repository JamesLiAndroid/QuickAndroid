<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.james.li.quickandroid.MainActivity">

    <!--<android.support.v4.view.ViewPager-->
        <!--android:layout_height="500dp"-->
        <!--android:layout_width="match_parent"-->
        <!--android:visibility="gone"-->
        <!--android:id="@+id/viewPager2">-->

    <!--</android.support.v4.view.ViewPager>-->

    <Button
        android:text="触发错误页面"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/btn_error"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="进入导航主页面"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/btn_nav"
        android:layout_below="@+id/btn_error"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <Button
        android:text="进入侧滑菜单页面"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/btn_drawer"
        android:layout_below="@+id/btn_nav"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <Button
        android:text="进入FloatingActionButton菜单页面"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/btn_floating_action"
        android:layout_below="@+id/btn_nav"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />


</RelativeLayout>
